{
    "restartable": "rs",
    "ignore": [".git", "node_modules/**/node_modules"],
    "verbose": true,
    "execMap": {
      "ts": "node --require ts-node/register"
    },
    "watch": ["src/"],
    "exec": "ts-node ./src/index.ts",
    "env": {
      "NODE_ENV": "development",
      "PORT": 3000
    },
    "ext": "js,json,ts"
  }